{
  "compilerOptions": {
    "lib": ["deno.ns", "deno.unstable", "dom"],
    "strict": true
  },
  "lint": {
    "files": {
      "include": ["**/*.ts"]
    },
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "options": {
      "singleQuote": true,
      "indentWidth": 2,
      "lineWidth": 80
    }
  },
  "tasks": {
    "start": "deno run --allow-net server.ts"
  }
}
